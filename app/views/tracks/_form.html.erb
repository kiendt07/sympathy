<div class="row">
  <div class="col-md-6 text-center">
    <h3><%= t ".h3_create_by" %></h3><br>

    <form action="https://<%= ENV["S3_BUCKET_NAME"] %>.s3-<%= ENV["AWS_REGION"] %>.amazonaws.com"
      method="post" enctype="multipart/form-data" class="direct-upload">
      <input type="hidden" name="key">
      <input type="hidden" name="AWSAccessKeyId"
        value="<%= ENV["AWS_ACCESS_KEY_ID"] %>">
      <input type="hidden" name="acl" value="public-read">
      <input type="hidden" name="policy">
      <input type="hidden" name="signature">
      <input type="hidden" name="success_action_status" value="201">

      <div class="text-center">
        <input type="file" name="file" class="hidden-file" id="hidden-file">
        <label for="hidden-file">
          <div><%= t ".upload_text" %></div>
        </label>
      </div>

      <div class="progress-note"></div>
      <div class="progress" style="display: none">
        <div class="progress-bar progress-bar-info progress-bar-striped"
             role="progressbar">
        </div>
      </div>
    </form>
    <br>
    <small><%= t ".small_or" %></small>
    <br><br>
    <small>
      <strong><%= t ".label-track_url_raw_placeholder" %></strong>
    </small>
    <input type="text" id="track_url_raw" class="form-control">
  </div>
  <div class="col-md-6 text-center">
    <h3><%= t ".preview" %></h3><br>
    <div class="track-preview">
      <h3 class="text-center" id="track-preview-name"></h3>
      <audio controls>
        <source src="" type="audio/mpeg">
      </audio>
      <iframe scrolling="no" width="500" height="150"
        src="" frameborder="0" allowfullscreen="true"></iframe>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <%= form_for track, id: "track_form" do |f| %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 form-new-track">
        <div class="form-group form-title">
          <input type="text" name="track[name]"
            value="<%= track.name %>"
            class="form-control"
            required="true"
            placeholder="<%= t '.input_track_name' %>">
        </div>
        <br>

        <input type="hidden" name="track[url]" id="track_url"
          value="<%= track.url %>">
        <input type="hidden" name="track[is_private]" id="post_is_private"
          value="false">
        <input type="hidden" name="type" value="track">
        <div class="form-group text-center">
          <%= f.submit t(".submit"), class: "btn btn-primary",
            disabled: "disabled", id: "submit" %>
          <span><%= t ".small_or" %></span>
          <br>
          <button id="submit-private" class="btn btn-default"
            disabled="disabled">
            <%= t ".submit_private" %>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>

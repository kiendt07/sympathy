<% provide :title, @user.name %>
<aside class="col-md-4">
  <section>
    <h1>
      <%= @user.name %><br>
      <%= @user.email %>
    </h1>
  </section>
  <section class="stats">
    <%= render "shared/stats", user: @user %>
  </section>
</aside>
<div class="col-md-8">
  <%= render("follow_form",
    user: @user, relationship: @relationship) if user_signed_in? %>
</div>

### Generic smell configuration

# You can disable smells completely
IrresponsibleModule:
  enabled: false

FeatureEnvy:
  enabled: false

DuplicateMethodCall:
  enabled: false

TooManyStatements:
  enabled: false

Attribute:
  enabled: false

NilCheck:
  enabled: false

UtilityFunction:
  enabled: false

exclude_paths:
  - db

'app/controllers':
  InstanceVariableAssumption:
    enabled: false
